                <span class="oi oi-home" aria-hidden="true"></span> Главная
            </NavLink>
        </li>
        <AuthorizeView Roles="Admin, Normal">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="/hospitals/index">
